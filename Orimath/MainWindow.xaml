<Window x:Class="Orimath.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Orimath"
        Width="800"
        Height="600"
        Icon="/icon_ho.ico"
        DataContext="{Binding Workspace, Source={StaticResource rootViewModel}, Mode=OneTime}"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        ContentRendered="Window_ContentRendered">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="CanvasItemsPanel">
            <Canvas />
        </ItemsPanelTemplate>
    </Window.Resources>
    <DockPanel>
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding MainViewModels, Mode=OneTime}"
                          ItemsPanel="{StaticResource CanvasItemsPanel}" />
        </ScrollViewer>
    </DockPanel>
</Window>
